{
  "name": "specimen-boilerplate-support",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier '**/*.{js,json}'",
    "eslint": "eslint .",
    "lint": "run-s 'prettier --check' eslint",
    "test": "run-s lint test:ava",
    "test:ava": "ava"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "eslint": "^6.7.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "fontkit": "^1.8.0",
    "postcss": "^7.0.25"
  }
}
